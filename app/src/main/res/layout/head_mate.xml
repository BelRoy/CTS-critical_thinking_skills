<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/memory_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="20dip"
    tools:context=".game.HeadMate">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:id="@+id/tile_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_text"
        android:layout_centerHorizontal="true"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/button0"
                android:contentDescription="@string/desc"
                android:src="@drawable/defaultsmile" />

            <ImageButton
                android:id="@+id/button1"
                android:contentDescription="@string/desc"
                android:src="@drawable/defaultsmile" />

            <ImageButton
                android:id="@+id/button2"
                android:contentDescription="@string/desc"
                android:src="@drawable/defaultsmile" />
        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/button3"
                android:contentDescription="@string/desc"
                android:height="60dip"
                android:src="@drawable/defaultsmile"
                android:width="60dip" />

            <ImageButton
                android:id="@+id/button4"
                android:contentDescription="@string/desc"
                android:height="60dip"
                android:src="@drawable/defaultsmile"
                android:width="60dip" />

            <ImageButton
                android:id="@+id/button5"
                android:contentDescription="@string/desc"
                android:height="60dip"
                android:src="@drawable/defaultsmile"
                android:width="60dip" />
        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/button6"
                android:contentDescription="@string/desc"
                android:height="60dip"
                android:src="@drawable/defaultsmile"
                android:width="60dip" />

            <ImageButton
                android:id="@+id/button7"
                android:contentDescription="@string/desc"
                android:height="60dip"
                android:src="@drawable/defaultsmile"
                android:width="60dip" />

            <ImageButton
                android:id="@+id/button8"
                android:contentDescription="@string/desc"
                android:height="60dip"
                android:src="@drawable/defaultsmile"
                android:width="60dip" />
        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/button9"
                android:contentDescription="@string/desc"
                android:height="60dip"
                android:src="@drawable/defaultsmile"
                android:width="60dip" />

            <ImageButton
                android:id="@+id/button10"
                android:contentDescription="@string/desc"
                android:height="60dip"
                android:src="@drawable/defaultsmile"
                android:width="60dip" />

            <ImageButton
                android:id="@+id/button11"
                android:contentDescription="@string/desc"
                android:height="60dip"
                android:src="@drawable/defaultsmile"
                android:width="60dip" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/tile_grid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:text="@string/reset_label" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_hm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/back_kn"/>

</RelativeLayout>